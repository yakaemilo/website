/* color scheme */ 
:root {
	--c0: #0B0807;
	--c1: #98b9dc;
	--c2: #a8cee2;
	--c3: #b7d5e7;
	--c4: #bbcae8;
	--c5: #efd1d7;
	--c6: #c9daed;
	--c7: #e3eaf0;
	--c8: #9ea3a8;
	--c9: #98b9dc;

	--fg: var(--c0);
	--bg: var(--c7);
}

::selection {
	background-color: var(--c9);
}

/* rules for darkmode */
#dark:target ~ .container {
	--fg:       var(--c7);
	--bg:       var(--c0);
	background: url("./wired.png");
	background-size: cover;
	background-repeat: no-repeat;
	background-position-y: bottom 40%;
}

#dark:target ~ .container .div1 {
}

#dark:target ~ .container .darkbtn {
	z-index: -1;
}

/* rules for darkmode end*/

.container {
	height:     100%;
	background-color: white;
}

header {
	background: var(--bg);
}

h2 {
	text-align: center;
}

.bg {
	background-color: var(--bg);
}

.fg {
	background-color: var(--fg);
}

.align {
	margin-left:  20%;
	margin-right: 20%;
}

.row {
	display: flex;
	flex-flow: row wrap;
}

.text5 {
	color: var(--c5);
}

.links {
	flex: 1;
	padding-top: 1em;
	padding-bottom: 1em;
}

.div1 {
	margin-bottom: 0;
}

.big_text {
	text-align: center;
	padding-bottom: 2em;
	padding-top: 2em;
}

.row {
	display: flex;
	flex-flow: row wrap;
}

.link:hover {
	text-decoration: underline;
	color: var(--c2)
}

.link {
	text-decoration: none;
	color: var(--c2)
}

/* rules for contact.html */
.contact {
	display: flex;
	flex-flow: row wrap;
}

.contact > * {
	padding 20%
}

.contact_type {
	padding-right: 20%;
}
.contact_info {
	padding-right: 50%;
}

/* rules for contact.html end */

/* stupit button */
.btn {
	font-size: 1.3rem;
	display: grid;
	align: right;
}

.btn:hover > * {
}

.btn > * {
	background-color: var(--bg);
	border-radius: 50%;
	border: .1em solid var(--fg);
	padding: 0.17em;
	padding-top:       0.02em;
	padding-bottom:       0em;

	grid-row: 1;
	grid-column: 1;
	color: var(--fg);
	text-decoration: none;
}

.darkbtn {
	z-index:  1;
}
/* stupit button end */



	


.round-corner {
	border-radius: 50px;
	border-color:  #012;
	border:        0;
	padding:       10px;
}
